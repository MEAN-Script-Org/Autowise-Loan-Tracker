<!DOCTYPE html>
<html>
<head>
  <% include partials/header.ejs %>
</head>

<body ng-app="SWEApp" ng-controller="LoginController">
  <% include partials/nav.ejs %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">Log in</div>
        <div class="panel-body">
          <form role="form">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus="" ng-model="username">
              </div>
              <div class="form-group">
                <input ng-model="pwd" class="form-control" placeholder="Password" name="password" type="password" >
              </div>              
              <!-- Display only if you're gonna implement this -->
              <!-- 
              <div class="checkbox">
                <label>
                  <input name="remember left-text" type="checkbox" value="Remember Me">Remember Me
                </label>
              </div>
               -->

              <!-- href logic was tricky... -->
              <!-- TODO: Modify based on an angular f(x) -->
              <a ng-disabled="!(pwd && username)" 
                 ng-class="!(pwd && username) ? 'inactive' : ''" 
                 class="btn btn-primary" href="/admin">
                Login
              </a>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
  
<% include partials/footer.ejs %>
</body>
</html>
