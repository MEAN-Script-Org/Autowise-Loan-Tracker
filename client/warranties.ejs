    <!-- ROW - WARRANTIES QUERY FORM -->
		<div class="row">
			<div class="col-md-12">
        <div class="panel-heading">
          <h1 class="page-header">Warranties</h1>
        </div>

        <h5 class="warranty-instruction">
          (Please enter car information and click 'Submit'. Qualified warranties will be displayed.)
        </h5>
        

        <!-- FORM FOR WARRANTY PLAN QUERY -->
        <form ng-submit="queryWarrantyPlan()">
          <fieldset>
            
            <!-- DROP-DOWN FOR CAR AGE SELECTION -->
            <div class="form-group">
              <h4 class="page-header-warranties">Car model year</h4>
              <select ng-model="query.age">
                <option value="-1">Older than 2007</option>
                <option value="2007">2007 to 2011</option>
                <option value="2011">Newer than 2011</option>
              </select>
            </div>
            
            <!-- TEXT-ENTRY FOR CAR MILEAGAE -->
            <div class="form-group">
              <h4 class="page-header-warranties">Mileage</h4>
              <input type="text" name="Mileage" ng-model="query.max_mileage"><br>
            </div>
            
            <!-- RADIO BUTTON FOR CAR MAKE/COUNTRY OF ORIGIN -->
            <div class="form-group">
              <h4 class="page-header-warranties">Car make: Domestic or Asian</h4>
              <input type="radio" name="RadioAnswer" value="Domestic" ng-model="query.make"> Domestic<br>
              <input type="radio" name="RadioAnswer" value="Asian" ng-model="query.make"> Asian
            </div>
            
            <!-- SUBMISSION BUTTON -->
            <div class="form-group">
              <button type="submit" class="btn btn-default" id="your-id">Submit</button>
            </div>
          </fieldset>
        </form>
      </div>
		</div><!--/.row-->
    
    <!-- ROW - WARRANTIES QUERY RESULTS -->
    <div class="row">
      <div class="col-md-12">
        <div class="container-accordion">
          <div class="accordion">
            <dl>
              <div ng-repeat="warranty in matchedWarranties">
                
                <!-- ACCORDION HEADER -->
                <dt>
                  <a class="accordionFakeTitle">
                    <div class="warrantiesQueryText">
                      <h4><strong>Age:</strong> {{warranty.age}}</h4>
                      <h4><strong>Term length of warranty:</strong> {{warranty.term.months}} months</h4>
                      <h4><strong>Mileage length of warranty:</strong> {{warranty.term.miles}} miles</h4>
                      <h4><strong>Max Mileage:</strong> {{warranty.max_mileage}} miles</h4>
                      <h2><strong>Price:</strong> {{warranty.price}}</h2>
                    </div>
                  </a>
                </dt>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
