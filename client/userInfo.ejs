<!DOCTYPE html>
<html>
<head>
  <% include partials/header.ejs %>
</head>
<body>

  <!-- MAIN PAGE DIV -->
  <div class="col-sm-12 col-lg-12 main" ng-app="SWEApp" ng-controller="UserAccounts" ng-init="init()">
        <% include partials/nav.ejs %>
        <div class="header row">
            <ol class="breadcrumb">
                <li><a href="#">
                    <em class="fa fa-home"></em>
                </a></li>
                <li class="active">Account Information</li>
            </ol>
        </div>

    <div class="row">
      <h1 class="page-header user-info-title">Account Information</h1>
    </div>
    <hr>
    
    <!-- USERNAME -->
    <div class="row user-info-row">             
      <div class="col-md-6 col-beg">
        <h3>Username</h3>
      </div>
      <div class="col-md-6">
        <div class="user-info-spacing"> {{user.username}} </div>
      </div>    
    </div>
    
    <!-- ROLE -->
    <div class="row user-info-row">             
      <div class="col-md-6 col-beg">
        <h3>Role</h3>
      </div>
      <div class="col-md-6">
        <span ng-hide="user.isAdmin">Autowise Customer</span>
        <span ng-show="user.isAdmin && !user.isSuperAdmin">Autowise Administrator</span>
        <span ng-show="user.isSuperAdmin">Autowise Super Admin</span>
      </div>
    </div>
    
    <!-- NAME -->
    <div class="row user-info-row">             
      <div class="col-md-6 col-beg">
        <h3>Name</h3>
      </div>
      <div class="col-md-6">
        {{user.name}}
      </div>
    </div>
    
    <!-- DOB -->
    <div class="row user-info-row">             
      <div class="col-md-6 col-beg">
        <h3>Date of Birth</h3>
      </div>
      <div class="col-md-6">
        {{user.dob}}
      </div>    
    </div>
    
    <!-- EMAIL -->
    <div class="row user-info-row">             
         <div class="col-md-6 col-beg">
             <h3>Email</h3>
         </div>
         <div class="col-md-6">
             {{user.email}}
         </div>  
    </div>
    
    <!-- DL -->
    <div class="row user-info-row">             
         <div class="col-md-6 col-beg">
             <h3>Driver's License</h3>
         </div>
         <div class="col-md-6">
             {{user.dl}}
         </div>
    </div>
    
    <!-- Forgot password area -->
    <div class="row user-info-row user-info-btn">
      
      <% include partials/modals.ejs %>
      
      <!-- Forgot my password button -->
      <button class="btn btn-primary " data-dismiss="modal" data-target="#changePasswordModal" data-toggle="modal">
        Change My Password
      </button>
    </div>
  </div>

<% include partials/footer.ejs %>

</body>
</html>